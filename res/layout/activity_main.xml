<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:id="@+id/activity"
    android:clipChildren="false"
    tools:context="trzcina.trzcinabench.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/bitmapy"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Bitmpy" />

        <Button
            android:id="@+id/alokacja"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Alokacja" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay2"
        android:layout_below="@id/lay1"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/zapis"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Zapis" />

        <Button
            android:id="@+id/odczyt"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Odczyt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay3"
        android:layout_below="@id/lay2"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/podzial"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Podzial" />

        <Button
            android:id="@+id/grafika"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Grafika" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay4"
        android:layout_below="@id/lay3"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/zapistab"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Zapis Tablicy" />

        <Button
            android:id="@+id/odczyttab"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Odczyt Tablicy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay5"
        android:layout_below="@id/lay4"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/kompaktowanie"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Kompaktowanie" />

        <Button
            android:id="@+id/petla"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_weight="1"
            android:text="Petla" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Info"
        android:elevation="1px"
        android:layout_toStartOf="@id/progressbar" />

    <TextView
        android:id="@+id/wynik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:elevation="10px"
        android:textStyle="bold" />

</RelativeLayout>
